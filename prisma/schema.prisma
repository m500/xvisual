generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Feedback {
  id        String   @id @default(uuid())
  text      String
  selector  String
  url       String
  projectId String   @default("public") // <--- TOTO SME PRIDALI (náš hash)
  x         Float
  y         Float
  status    String   @default("open")
  createdAt DateTime @default(now())
}